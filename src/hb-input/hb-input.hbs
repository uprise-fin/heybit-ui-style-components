<div class="hb-input" part="hb-input">
  <slot
    name="left-slot"
    part="hb-input__slot--left"
    class="hb-input__slot"
  ></slot>
  <input
    class="hb-input__el"
    part="hb-input__el"
    value="{{value}}"
    type="text"
  />
  <i class="hb-input__border" part="hb-input__border"></i>
  <slot
    name="right-slot"
    part="hb-input__slot--right"
    class="hb-input__slot"
  ></slot>
</div>