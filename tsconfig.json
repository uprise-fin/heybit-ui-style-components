{
  "include": ["src/**/*", "__tests__/**/*", "node_modules/lit-scss-loader/types.d.ts"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "baseUrl": "./",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2019",
    // "lib": ["es2019"],
    "moduleResolution": "node"
  }
}
