{
  "include": ["src/**/*", "node_modules/lit-scss-loader/types.d.ts", "index.d.ts"],
  "paths": {
    "@/*": ["src/*"],
    "~/*": ["/*"]
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2015",
    "moduleResolution": "node"
  }
}
